{
	"printWidth": 100,
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"useTabs": true,
	"overrides": [
		{
			"files": ["pnpm-lock.yaml"],
			"options": {
				"rangeEnd": 0
			}
		},

		{
			"files": ["package.json"],
			"options": {
				"plugins": ["prettier-plugin-sort-package-json"]
			}
		},
		{
			"files": ["*.md"],
			"options": {
				"tabWidth": 4
			}
		},
		{
			"files": ["*.svelte"],
			"options": {
				"plugins": ["prettier-plugin-svelte"]
			}
		}
	]
}
